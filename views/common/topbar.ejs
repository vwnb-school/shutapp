        <button type="submit" class="btn btn-success">
          <span>Sign in</span>
        </button>
        <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
      </form>
    <% } else { %>
      <div class="navbar-form">
      <a href="/user/logout"><button class="btn btn-default logout navbar-right">Logout</button></a>
      </div>
    <% } %>
